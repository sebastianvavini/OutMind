<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DormeActivity">


    <LinearLayout
        android:id="@+id/root_layout_hora_dorme"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <RadioGroup
            android:id="@+id/radio_group_pergunta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/pergunta_dormir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A que horas costuma Dormir?"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <RadioButton
                android:id="@+id/antes_das_20h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" as 20h.."
                />

            <RadioButton
                android:id="@+id/antes_das_21h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="às 21h"
                />

            <RadioButton
                android:id="@+id/antes_das_22h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="às 22h"
                />

            <RadioButton
                android:id="@+id/antes_das_23h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="às 23h"
                />

            <RadioButton
                android:id="@+id/antes_das_00h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="às 00h"
                />


        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/button_avancar_medita_antes_dormir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Avançar"
        app:layout_constraintTop_toBottomOf="@+id/root_layout_hora_dorme"
        app:layout_constraintStart_toStartOf="@+id/root_layout_hora_dorme"
        app:layout_constraintEnd_toEndOf="@+id/root_layout_hora_dorme"

        />


    <TextView
        android:id="@+id/textView_dormiu2"
        android:layout_width="0dp"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:hint="Dormiu: "
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/button_avancar_medita_antes_dormir"
        app:layout_constraintStart_toStartOf="@+id/button_avancar_medita_antes_dormir"
        app:layout_constraintEnd_toEndOf="@+id/button_avancar_medita_antes_dormir"
        />
    <TextView
        android:id="@+id/textView_nivel"
        android:layout_width="0dp"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:hint="Nivel: "
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/textView_dormiu2"
        app:layout_constraintStart_toStartOf="@+id/textView_dormiu2"
        app:layout_constraintEnd_toEndOf="@+id/textView_dormiu2"
        />







</androidx.constraintlayout.widget.ConstraintLayout>